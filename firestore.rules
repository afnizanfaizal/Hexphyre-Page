rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Blog Posts
    match /posts/{postId} {
      allow read: if true;
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']);
      allow write: if request.auth != null;
    }
    
    // Categories & Tags
    match /categories/{id} { allow read: if true; allow write: if request.auth != null; }
    match /tags/{id} { allow read: if true; allow write: if request.auth != null; }
    
    // Site Settings
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
